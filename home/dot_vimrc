set nocompatible
filetype off

" Redefine tab as 2 spaces by default
filetype plugin indent on
set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

" Enable autoindent on new line
set autoindent

" Enable syntax highlighting
syntax enable

" Use shift-tab for unindent
nnoremap <S-Tab> <<
inoremap <S-Tab> <C-d>
