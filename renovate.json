{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^home/dot_tool-versions\\.tmpl$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>[^\\s]+?)\\s[a-z]+? (?<currentValue>.+?)\\s"
      ],
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ]
}
